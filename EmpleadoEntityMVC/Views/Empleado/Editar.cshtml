@model EmpleadoEntityMVC.Models.VistaModelo.EmpleadoVistaModelo
@{
    ViewBag.Title = "Edidar Empleado";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Editar", "Empleado", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.codigo)
            <div>
                <label id="labelnombre">Nombre</label>
                @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.nombre, null, new { @class = "red" })
            </div>
            <div>
                <label id="labelsalario">Salario</label>
                @Html.TextBoxFor(d => d.salario, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.salario, null, new { @class = "red" })
            </div>
            <div>
                <label id="labelfechaingreso">Fecha de Ingreso</label><br />
                @Html.EditorFor(d => d.fechaingreso, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.fechaingreso, null, new { @class = "red" })
            </div>


        </div>
        <div class="row" style="text-align:right;padding:5px">
            <input value="Guardar" class="btn btn-primary" type="submit" />
        </div>

    </div>
}
